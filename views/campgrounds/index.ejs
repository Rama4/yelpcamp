<%  include ../partials/header %>
<div class="container">
<header class="jumbotron">
   <div class="container">
        <h1>Welcome to YelpCamp!</h1>
        <p>View our hand-picked campgrounds from all over the world!<p>
        <p ><a class="btn btn-primary btn-large" href="/campgrounds/new" >Add a New Campground</a></p>
   </div>
</header>
<div class="container">

     <br>
    <div class="row" style="display:flex; flex-wrap:wrap;">
        <% for( var i=0; i< camps.length; i++ ) {%>
            <div class="col-md-3 col-sm-6">
                <div class="thumbnail">
                    <% if(camps[i].image_approved === true || !camps[i].image){ %>
                        <img src="<%=camps[i].image%>" >
                    <% } else { %>
                        <h3 style="text-align: center">Image awaiting moderation.</h3>
                    <% } %>
                <div class="caption">
                     <h4> <%=camps[i].name%></h4>
                </div>
                <p style="margin:auto; text-align:center;">
                    <a href="/campgrounds/<%= camps[i]._id %>" class="btn btn-primary"><i class="fa fa-info-circle"></i> More info</a>
                </p>
                </div>
            </div>
        <% } %>
    </div>
</div>
</div>

<% include ../partials/footer  %>
