<%  include ../partials/header %>
<div class="container">
<header class="jumbotron">
   <div class="container">
        <h1>Welcome to YelpCamp!</h1>
        <p>View our hand-picked campgrounds from all over the world!<p>
        <p ><a class="btn btn-primary btn-large" href="/campgrounds/new" >Add a New Campground</a></p>
   </div>
</header>
<div class="container">

     <br>
    <div class="row" style="display:flex; flex-wrap:wrap;">
        <% for( camp of camps ) {%>
            <div class="col-md-3 col-sm-6">
                <div class="thumbnail">
                    <%if(("image_approved" in camp && camp.image_approved == true) || !camp.image || (camp.author.id && currentuser && camp.author.id.equals(currentuser._id)) ){ %>
                        <img src="<%=camp.image%>" >
                    <% } else if("image_approved" in camp && camp.image_approved == false){ %>
                        <h4 style="text-align: center">Image rejected.</h4>
                    <% } else { %>
                        <h4 style="text-align: center">Image awaiting moderation.</h4>
                    <% } %>
                <div class="caption">
                     <h4> <%=camp.name%></h4>
                </div>
                <p style="margin:auto; text-align:center;">
                    <a href="/campgrounds/<%= camp._id %>" class="btn btn-primary"><i class="fa fa-info-circle"></i> More info</a>
                </p>
                </div>
            </div>
        <% } %>
    </div>
</div>
</div>

<% include ../partials/footer  %>
