                            <div class="row">
                                <h3 style="color:black;"><strong><%=campground.rating_avg%>  <span style="color:black;">&#9733;</span></strong></h3>
                            </div>
                            <div class="row">
                                <strong>(<%=campground.comments.length%> rating<%if(campground.comments.length!=1){%>s<% }%>)</strong>
                            </div>
                        </div>
						<!-- ratings bars-->
