<% include ../partials/header %>
<div class="container">
    <div class="row">
        <div class="col-md-9">
            <div class="thumbnail">
				<%if(campground.image_approved == true || !campground.image){ %>
					<img class="img-responsive photo" src="<%=campground["image"]%>">
				<% } else { %>
					<h3 style="text-align: center">Image awaiting moderation.</h3>
				<% } %>
                <div class="caption-full">
                    <h4><a><%=campground.name%></a></h4>
                    <pre><%= campground.description %></pre>
                    <p><em>Submitted By <strong><%= campground.author.username %></strong> on <%=campground.date_created%></em></p>
