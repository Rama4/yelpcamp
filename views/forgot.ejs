<% include partials/header%>
<div class="container">
<div style="width: 50%; margin: 25px auto;">

<h1>Forgot your password?</h1>
<hr style=" background-color: #aaaaaa; height: 1px; border: 0; ">
<p style="color:white;">Enter your email or username below and we will send you a link to reset your password</p>
<br>
<form action="/forgot" method="POST">
    <div class="form-group">
        <input class="form-control" name="email" type="email" placeholder="Email"></input>
    </div>
    <div class="form-group">
        <button class="btn btn-lg btn-primary btn-block">Send Password Reset Instructions</button>
    </div>
</form>
</div>
</div>

